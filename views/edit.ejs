<!DOCTYPE html>
<html lang="en">
<head>
    <%- include ('./partials/header.ejs') %>
</head>
<body>
    <h1>Edit <%= player.name %></h1>
    <form action="/players/<%= player.id %>?_method=PUT" method="POST">
        <div>
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" value="<%= player.name %>" required>
        </div>
        <div>
            <label for="team">Team:</label>
            <input type="text" id="team" name="team" value="<%= player.team %>" required>
        </div>
        <div>
            <label for="position">Position:</label>
            <input type="text" id="position" name="position" value="<%= player.position %>" required>
        </div>
        <div>
            <label for="age">Age:</label>
            <input type="number" id="age" name="age" value="<%= player.age %>" required>
        </div>

        
        <h2>Stats</h2>
        <div>
            <label for="points">Points:</label>
            <input type="number" id="points" name="stats[points]" value="<%= player.stats.points %>" required>
        </div>
        <div>
            <label for="rebounds">Rebounds:</label>
            <input type="number" id="rebounds" name="stats[rebounds]" value="<%= player.stats.rebounds %>" required>
        </div>
        <div>
            <label for="assists">Assists:</label>
            <input type="number" id="assists" name="stats[assists]" value="<%= player.stats.assists %>" required>
        </div>
        <div>
            <label for="blocks">Blocks:</label>
            <input type="number" id="blocks" name="stats[blocks]" value="<%= player.stats.blocks %>" required>
        </div>
        <div>
            <label for="steals">Steals:</label>
            <input type="number" id="steals" name="stats[steals]" value="<%= player.stats.steals %>" required>
        </div>
        <div>
            <label for="turnovers">Turnovers:</label>
            <input type="number" id="turnovers" name="stats[turnovers]" value="<%= player.stats.turnovers %>" required>
        </div>
        <div>
            <label for="minutesPlayed">Minutes Played:</label>
            <input type="number" id="minutesPlayed" name="stats[minutesPlayed]" value="<%= player.stats.minutesPlayed %>" required>
        </div>
        <div>
            <label for="fieldGoalPercentage">Field Goal %:</label>
            <input type="number" id="fieldGoalPercentage" name="stats[fieldGoalPercentage]" value="<%= player.stats.fieldGoalPercentage %>" required>
        </div>
        <div>
            <label for="threePointPercentage">Three Point %:</label>
            <input type="number" id="threePointPercentage" name="stats[threePointPercentage]" value="<%= player.stats.threePointPercentage %>" required>
        </div>
        <div>
            <label for="freeThrowPercentage">Free Throw %:</label>
            <input type="number" id="freeThrowPercentage" name="stats[freeThrowPercentage]" value="<%= player.stats.freeThrowPercentage %>" required>
        </div>

        <button type="submit">Update Player</button>
    </form>

    <nav>
        <a href="/players/<%= player.id %>">Cancel</a>
    </nav>

</body>
</html>