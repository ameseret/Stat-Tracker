<!DOCTYPE html>
<html lang="en">
<head>
  <%- include ('./partials/header.ejs') %>
</head>
<body>
    <div class="crud-container">
        <h1>Add New Player</h1>
        <form action="/players" method="POST">
            <div class="form-group">
                <label for="name">Name:</label>
                <input type="text" id="name" name="name" required>
            </div>
            <div class="form-group">
                <label for="team">Team:</label>
                <input type="text" id="team" name="team" required>
            </div>
            <div class="form-group">
                <label for="position">Position:</label>
                <input type="text" id="position" name="position" required>
            </div>
            <div class="form-group">
                <label for="age">Age:</label>
                <input type="number" id="age" name="age" required>
            </div>

            <div class="player-stats">
                <h2>Stats</h2>
                <div class="form-group">
                    <label for="points">Points:</label>
                    <input type="number" id="points" name="stats[points]" required>
                </div>
                <div class="form-group">
                    <label for="rebounds">Rebounds:</label>
                    <input type="number" id="rebounds" name="stats[rebounds]" required>
                </div>
                <div class="form-group">
                    <label for="assists">Assists:</label>
                    <input type="number" id="assists" name="stats[assists]" required>
                </div>
                <div class="form-group">
                    <label for="blocks">Blocks:</label>
                    <input type="number" id="blocks" name="stats[blocks]" required>
                </div>
                <div class="form-group">
                    <label for="steals">Steals:</label>
                    <input type="number" id="steals" name="stats[steals]" required>
                </div>
                <div class="form-group">
                    <label for="turnovers">Turnovers:</label>
                    <input type="number" id="turnovers" name="stats[turnovers]" required>
                </div>
                <div class="form-group">
                    <label for="minutesPlayed">Minutes Played:</label>
                    <input type="number" id="minutesPlayed" name="stats[minutesPlayed]" required>
                </div>
                <div class="form-group">
                    <label for="fieldGoalPercentage">Field Goal %:</label>
                    <input type="number" id="fieldGoalPercentage" name="stats[fieldGoalPercentage]" required>
                </div>
                <div class="form-group">
                    <label for="threePointPercentage">Three Point %:</label>
                    <input type="number" id="threePointPercentage" name="stats[threePointPercentage]" required>
                </div>
                <div class="form-group">
                    <label for="freeThrowPercentage">Free Throw %:</label>
                    <input type="number" id="freeThrowPercentage" name="stats[freeThrowPercentage]" required>
                </div>
            </div>

            <button type="submit" class="btn-add">Add Player</button>
        </form>

        <nav>
            <a href="/players" class="btn-cancel">Back to All Players</a>
        </nav>
    </div>
</body>
</html>